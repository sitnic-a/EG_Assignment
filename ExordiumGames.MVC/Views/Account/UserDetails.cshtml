@model ExordiumGames.MVC.Dto.UserDto

<section class="container user-roles">
    <form asp-action="UpdateUserRoles" asp-controller="Account" asp-route-UserId="@Model.UserId">
        
        <div class="form-control">
            <label asp-for="Username">User name:</label>
            <input type="text" asp-for="@Model.Username" disabled />
            <input type="hidden" asp-for="@Model.Username"/>
        </div>
        <br />
        
        <div class="form-control">
            <label asp-for="Email">Email:</label>
            <input type="text" asp-for="@Model.Email" disabled />
            <input type="hidden" asp-for="@Model.Email" />
        </div>
        <br />

        <div class="form-control">
            <label asp-for="Title">Title:</label>
            <input type="text" asp-for="@Model.Title" disabled />
            <input type="hidden" asp-for="@Model.Title" />
        </div>
        <br />

        <div class="form-control">
            <label>Roles:</label>
        </div>
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model.Roles[i].Id" />
                <input type="hidden" asp-for="@Model.Roles[i].Name" />
                <input asp-for="@Model.Roles[i].CheckedItem" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.Roles[i].Name">
                    @Model.Roles[i].Name
                </label>
            </div>
        }
        <button type="submit">Save</button>
    </form>
</section>
