@model ExordiumGames.MVC.Dto.CategoryResponseModel;

@using ExordiumGames.MVC.Data.DbModels;
@using ExordiumGames.MVC.Dto;
@{
    IList<CreateCategoryItemResponseModel> items = ViewBag.Items;
    List<SelectListItem> categories = ViewBag.Categories;
    List<SelectListItem> retailers = ViewBag.Retailers;
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExordiumGames.MVC.styles.css" asp-append-version="true" />
    <script src="/js/site.js"></script>
    <title>CreateCategory</title>
</head>
<body>
    <form id="category-form" asp-action="SaveCategory">
        <div>
            <label for="Name">Category Name:</label><br />
            <input type="text" id="Name" asp-for="@Model.Name" placeholder="Enter category name.." class="form-control" />
            <input type="hidden" asp-for="Name" />
        </div>
        <div>
            <label for="Priority">Priority:</label><br />
            <input type="number" min="0" max="5" id="Priority" asp-for="@Model.Priority" class="form-control" />
            <input type="hidden" asp-for="Priority" />
        </div>
        <button id="category-add-button" type="submit" class="form-control">Submit</button>
    </form>
</body>
</html>
