@model ExordiumGames.MVC.Dto.CreateCategoryRequestModel;

@using ExordiumGames.MVC.Data.DbModels;
@using ExordiumGames.MVC.Dto;
@{
    IList<CreateCategoryItemResponseModel> items = ViewBag.Items;
    List<SelectListItem> categories = ViewBag.Categories;
    List<SelectListItem> retailers = ViewBag.Retailers;
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExordiumGames.MVC.styles.css" asp-append-version="true" />
    <script src="/js/site.js"></script>
    <title>CreateCategory</title>
</head>
<body>
    <form id="category-form" asp-action="SaveCategory">
        <div>
            <label for="Name">Category Name:</label><br />
            <input type="text" id="Name" asp-for="CategoryName" placeholder="Enter category name.." class="form-control" />
            <input type="hidden" asp-for="CategoryName" />
        </div>
        <div>
            <label for="Priority">Priority:</label><br />
            <input type="number" min="0" max="5" id="Priority" asp-for="PrioriryValue" class="form-control" />
            <input type="hidden" asp-for="PrioriryValue" />
        </div>
        <br /> <br />
        <div class="items-container">
            @for (int i = 0; i < @items.Count; i++)
            {
                <div class="item form-control">
                    <input class="item-checkbox" type="checkbox" asp-for="@items[i].CheckedItem" />
                    <input type="hidden" asp-for="@items[i].CheckedItem" />
                    <div>
                        <input type="hidden" asp-for="@items[i].ItemId" />
                    </div>
                    <div>
                        <p>@items[i].Name</p>
                        <input type="hidden" asp-for="@items[i].Name" />
                    </div>
                    <div>
                        <p>@items[i].Description</p>
                        <input type="hidden" asp-for="@items[i].Description" />
                    </div>
                    <div>
                        <p>@items[i].Price</p>
                        <input type="hidden" asp-for="@items[i].Price" />
                    </div>
                    <div>
                        <p>@items[i].DiscountDate</p>
                        <input type="hidden" asp-for="@items[i].DiscountDate" />
                    </div>
                    <div>
                        <img class="image" src="@items[i].ImageUrl" />
                        <input type="hidden" asp-for="@items[i].ImageUrl" />
                    </div>
                    <div>
                        <select asp-for="@items[i].RetailerId" asp-items="@retailers"></select>
                    </div>
                    <div>
                        <select asp-for="@items[i].CategoryId" asp-items="@categories"></select>
                    </div>
                </div>
            }
        </div>
        <button id="category-add-button" type="submit" class="form-control">Submit</button>
    </form>
</body>
</html>
